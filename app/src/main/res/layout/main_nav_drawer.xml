<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#969E9F"
    android:gravity="top"
    android:orientation="vertical"
    android:padding="8dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:layout_width="61dp"
        android:layout_height="62dp"
        android:baselineAlignBottom="false"
        android:src="@mipmap/ic_tm_round" />

    <TextView
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="Settings"
        android:textSize="36sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#636363"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:onClick="ClickNotifications">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:padding="12dp"
            android:text="Notifications"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="87dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_baseline_notifications_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:onClick="ClickLayout">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="Layout"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="87dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_baseline_view_quilt_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:onClick="ClickRecoverData">

        <TextView
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="Recover Data"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="87dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_baseline_update_24" />

    </LinearLayout>

</LinearLayout>